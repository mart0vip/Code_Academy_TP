<div class="card">
  <h5 class="card-header">Edit form</h5>
  <div class="card-body">
    <p class="card-text">Please correct this information and we will keep in touch</p>
      <% if @errors %>
        <% @errors.each do |error| %>
          <div class="alert alert-danger" role="alert">
            <%= error%>
          </div>
        <% end %>
      <% end %>
      <form action='/student/<%=@current_student.email%>' method='post'>
        <input type='hidden' name='_method' value='PUT'/>
        <div class="form-group">
          <label>Name</label>
          <input type="text" name="name" value="<%=@current_student.name%>" class="form-control">
        </div>
        <div class="form-group">
          <label>Email address</label>
          <input type="email" name="email" value="<%=@current_student.email%>" class="form-control" readonly>
        </div>
        <div class="form-group">
          <label>Address</label>
          <input type="text" name="address" value="<%=@current_student.address%>" class="form-control">
        </div>
        <div class="form-group">
          <label>IBM Site</label>
          <select class="form-control" name="site">
            <% @site_options.each do |option| %>
              <option  <%= "selected" if option == @current_student.site%> ><%=option%></option>
            <% end %>
          </select>
        </div>
        <button type='submit' class='btn btn-primary'>Save</button>
      </form>
  </div>
</div>